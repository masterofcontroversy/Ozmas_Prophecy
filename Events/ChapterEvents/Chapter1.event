BossAttacked:
    CHECK_FLAG BossChargeFlag
    BNE 0x9000 sC s0
        //If not set, boss hasn't charged yet
        SVAL s1 0x1
        UNSET_CONDITION ActiveUnit
        EndMMS
        Text(Ch1_BossAttackedText)
        TEXTEND
        REMA

        CALL HighlightAndCharge

    LABEL 0x9000
    NoFade
ENDA

BossCharge:
    CHECK_FLAG BossQuoteID
    BNE 0x9000 sC s0
        Text(Ch1_ChargeText)
        TEXTEND
        REMA

        CAM1 Charles
        CALL HighlightAndCharge

    LABEL 0x9000
    NoFade
ENDA

HighlightAndCharge:
    CURSOR_FLASHING Charles
    CURSOR_FLASHING [2,14]
    CURSOR_FLASHING [1,11]
    STAL 90
    REMOVE_CURSORS

    SVAL s1 0x0
    CHAI Charles
    CHAI [2,14]
    CHAI [1,11]
    NoFade
ENDA

