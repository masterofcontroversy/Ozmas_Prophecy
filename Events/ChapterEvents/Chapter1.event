BeginningScene:
    SVAL s1 0
    ASMC ASMC_ChangeMode
    
    //Debug chapter jump
    #ifdef __DEBUG__
        SVAL s1 0x0200
        ASMC ASMC_CheckPlayerHoldingKeys
        BEQ 0x9000 sC s0
            CALL StartChapterJumpEvent
        LABEL 0x9000
    #endif

    SVAL s1 4000
    ASMC ASMC_SilentSetGold|1
    LOMA Ch1_OpeningChapterID
    CAM1 [28,18]
    MUSIC Kanna_BGM
    WEATHER Clouds
    EVBIT_F 8
    ASMC ASMC_SetCloudsForeground|1
    ASMC ASMC_FadeCloudToMap|1
